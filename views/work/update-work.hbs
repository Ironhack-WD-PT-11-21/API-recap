<form action="/work/create" method="post">
    <label for="title" name="title">
        Project title
        <input type="text" name="title" value="{{project.title}}">
    </label>
    <label for="description" name="description">
        Project description
        <textarea name="description">{{work.description}}</textarea>
    </label>
    <div>
        <label for="html" name="html">
            html
            <input type="checkbox" name="html" {{checkedIf work.techUsed 'html' }}>
        </label>
        <label for="css" name="css">
            css
            <input type="checkbox" name="css" {{checkedIf work.techUsed 'css' }}>
        </label>
        <label for="javascript" name="javascript">
            javascript
            <input type="checkbox" name="javascript" {{checkedIf work.techUsed 'javascript' }}>
        </label>
        <label for="nodeJS" name="nodeJS">
            nodeJS
            <input type="checkbox" name="nodeJS" {{checkedIf work.techUsed 'nodeJS' }}>
        </label>
    </div>

    <button type="submit">Create</button>
</form>